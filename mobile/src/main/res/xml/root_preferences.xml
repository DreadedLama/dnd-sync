<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
                  app:iconSpaceReserved="false">

    <!-- First Group: DND Sync + Treat Silent as DND -->
    <PreferenceCategory
            app:title="DND Sync Settings"
            app:iconSpaceReserved="false">

        <!-- Parent Switch -->
        <SwitchPreferenceCompat
                app:key="dnd_sync_key"
                app:iconSpaceReserved="false"
                app:defaultValue="true"
                app:title="@string/sync_title" />

    </PreferenceCategory>

    <!-- Second Group: Bedtime -->
    <PreferenceCategory
            app:title="Bedtime Sync Settings"
            app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
                app:key="bedtime_sync_key"
                app:iconSpaceReserved="false"
                app:defaultValue="true"
                app:title="@string/sync_bedtime_title" />
    </PreferenceCategory>

    <!-- Permissions -->
    <PreferenceCategory
            app:title="@string/permission_header"
            app:iconSpaceReserved="false">

        <Preference
                app:key="dnd_permission_key"
                app:iconSpaceReserved="false"
                app:title="@string/dnd_permission_title"
                app:summary="@string/dnd_permission_not_allowed" />
    </PreferenceCategory>

</PreferenceScreen>
